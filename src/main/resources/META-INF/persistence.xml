    <class>business.cliente.entity.Cliente</class>
    <class>business.cliente.entity.ClienteSolicitud</class>
    <class>business.cliente.entity.HistorialCliente</class>
    <class>business.configuracion.entity.Articulo</class>
    <class>business.configuracion.entity.Configuracion</class>
    <class>business.configuracion.entity.Notificaciones</class>
    <class>business.configuracion.entity.Servicio</class>
    <class>business.direccion.entity.Barrio</class>
    <class>business.direccion.entity.Ciudad</class>
    <class>business.direccion.entity.Departamento</class>
    <class>business.direccion.entity.Pais</class>
    <class>business.direccion.entity.Zona</class>
